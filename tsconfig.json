{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "noEmit": true, // noEmit을 true로 변경
    "jsx": "react-jsx",
    "composite": true,
    "outDir": "./dist/app",
    "allowImportingTsExtensions": true
  },
  "include": [
    "src/**/*",
    "eslint.config.js",
    "vite.config.ts" // vite.config.ts를 포함
  ]
}
